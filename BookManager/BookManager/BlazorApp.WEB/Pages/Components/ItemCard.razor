@using BookManager.WEB.Models.DTOS.Responses

<div class="card" style="width: 18rem; margin-left:1rem">
    <img src="@Item.Book.ImageLink" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Item.Book.Titolo</h5>
        <p class="card-text">@Item.Book.Description</p>
        <a href="#" @onclick="VisitBookDetail" class="btn btn-primary">@Item.ItemReviewList.Count Recensioni</a>
        <h6>@Item.Book.RatingAverage</h6>
    </div>
</div>

@code {

    [Parameter]
    public ItemResponse Item { get; set; }

    [Inject]
    protected NavigationManager nv { get; set; }

    protected void VisitBookDetail()
    {
        nv.NavigateTo($"/book/{Item.ItemId}/detail");
    }
}
